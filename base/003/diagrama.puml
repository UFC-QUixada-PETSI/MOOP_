@startuml

skinparam defaultFontName Hasklig
skinparam dpi 150

package com.qxcode {
  class Motorcycle {
    - person : Person | null
    - power  : int
    - time   : int
    __
    + Motorcycle(power : int)
    + enter(person : Person) : boolean
    + leave() : Person | null
    + buy(time : int)
    + drive(time : int)
    + honk()
    __
    + getPerson() : Person
    + getPower()  : int
    + getTime()   : int
    __
    + toString()  : string
  }
  
  class Person {
    - age  : int
    - name : string
    __
    + Person(name : string, age : int)
    __
    + getAge()  : int
    + getName() : string
    __
    + toString() : string
  }
}
Person "0..1" --o "1" Motorcycle : < Carry
@enduml